<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pic"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="edu.oleg088097.arkanoid.menu.PauseMenuActivity">

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/settings_button_pic"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:layout_constraintLeft_toRightOf="@+id/resumeButton"
        app:layout_constraintTop_toTopOf="@+id/resumeButton" />

    <Button
        android:id="@+id/resumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_pic"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="@string/resume"
        android:textColor="@color/text_blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14999998"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:background="@drawable/button_pic"
        android:text="@string/help"
        android:textColor="@color/text_blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/exitButton"
        app:layout_constraintRight_toRightOf="@+id/resumeButton"
        app:layout_constraintTop_toBottomOf="@+id/resumeButton"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_pic"
        android:text="@string/exit"
        android:textColor="@color/text_blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/resumeButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintRight_toLeftOf="@+id/resumeButton"
        app:layout_constraintTop_toTopOf="@+id/resumeButton"
        app:srcCompat="@drawable/blue_light_pic" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintRight_toLeftOf="@+id/helpButton"
        app:layout_constraintTop_toTopOf="@+id/helpButton"
        app:srcCompat="@drawable/green_light_pic" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/helpButton"
        app:srcCompat="@drawable/frame_pic"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintRight_toLeftOf="@+id/exitButton"
        app:layout_constraintTop_toTopOf="@+id/exitButton"
        app:srcCompat="@drawable/red_light_pic" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/frame_pic"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/exitButton"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/resumeButton"
        app:srcCompat="@drawable/frame_pic"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/settings_frame_pic"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/settingsButton" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/settings_light_pic"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton" />

</android.support.constraint.ConstraintLayout>